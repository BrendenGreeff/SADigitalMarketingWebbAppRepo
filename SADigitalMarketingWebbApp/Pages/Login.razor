@page "/"

@layout Login_Layout

@inject NavigationManager UriHelper

@using DataLibrary
@using SADigitalMarketingWebbApp.Models
@using Microsoft.Extensions.Configuration

@inject IDataAccess _data
@inject IConfiguration _config

<style>
    .div {
        margin: auto;
        width: auto;
    }

    label {
        display: block;
        width: 90px;
        text-align: center;
        font-weight: bold;
    }

    .backgroundimg {
        background-image: url(https://images.pexels.com/photos/1103970/pexels-photo-1103970.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260);
        width: 1880px;
        height: 880px;
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
    }

    .heading {
        font-size: 150px;
        font-weight: bold;
    }

    .container {
        background-color: aliceblue;
        width: 20%;
        height: 55%;
        text-align: center;
    }
</style>

<div class="div">
    <div class="LoginDiv">
        <div class="backgroundimg" align="center">
            <br />
            <br />
            <br />
            <br />


            <h3 class="heading">Login</h3>
            <br />
            <br />
            <h5>Please enter your user name and password to login or sign up if you dont have an account!</h5>
            <br />
            <label>Username</label>
            <input type="text" id="username" @bind-value="users.Users_Username" placeholder="Enter Username" />
            <br />
            <br />
            <label>Password</label>
            <input type="password" id="password" @bind-value="users.Users_Password" placeholder="Enter Password">

            <p style="color:@Color"><b>@text</b></p>
            <br />
            <br />
            <button type="submit" class="btn-primary" @onclick="Submit">Submit</button>
            <br />
            <h4>--------or--------</h4>
            <button type="submit" class="btn-secondary" @onclick="Navigate">Signup</button>

        </div>
    </div>
</div>

@code{

    UsersModel users = new UsersModel();

    private string Users_Fname { get; set; }
    private string Users_Lname { get; set; }
    private string Users_Username { get; set; }
    private string Users_Email { get; set; }
    private string Users_PhoneNumber { get; set; }
    private string Users_DOB { get; set; }
    private string ConfirmPassword { get; set; }
    private string Users_Password { get; set; }

    string Color = "black";
    string text = "";

    

    private async Task Submit()
    {
        string sql = "SELECT Users_Username, Users_Password FROM users";
        await _data.LoadData<UsersModel, dynamic>(sql, new {Users_Username = users.Users_Username, Users_Password = users.Users_Password }, _config.GetConnectionString("default"));

        if (users.Users_Username == Users_Username && users.Users_Password == Users_Password)
        {
            Color = "green";
            text = "Welcome Guest!";

            UriHelper.NavigateTo("/index");

        }
        else
        {
            Color = "red";
            text = "User Password Wrong!";


        }
    }

    private void Navigate()
    {
        UriHelper.NavigateTo("/signup");
    }

}
