@page "/login"
@inject NavigationManager UriHelper

<style>
    div {
        margin-bottom: 10px;
    }

    label {
        /*display: inline-block;*/
        width: 90px;
        text-align: center;
    }

    .backgroundimg {
        background-image: url(https://images.pexels.com/photos/531880/pexels-photo-531880.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260);
        width: 1600px;
        height: 850px;
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
    }

    .container {
        background-color: aliceblue;
        width: 20%;
        height: 60%;
        text-align: center;
    }
</style>

<div class="p-4">
    <div class="backgroundimg">
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />

        <div class="container" align="center">
            <br />
            <br />
            <h3>Login</h3>
            <h5>Please enter your user name and password to login or sign up if you dont have an account!</h5>
            <br />
            <label>Username</label>
            <input type="text" id="username" @bind="Username" placeholder="Enter Username">

            <br />
            <br />


            <label>Password</label>
            <input type="number" id="password" @bind="Password" placeholder="Enter Password">

            <p style="color:@Color"><b>@text</b></p>

            <button type="submit" class="btn-primary" @onclick="Submit">Submit</button>
            <br />
            <h4>--------or--------</h4>
            <button type="submit" class="btn-secondary" @onclick="Navigate">Signup</button>
        </div>
    </div>

</div>


@code {
    private string Username { get; set; }
    private string Password { get; set; }

    string Color = "black";
    string text = "";

    private void Submit()
    {
        if (Username == "Brenden" && Password == "1234567")
        {
            Color = "green";
            text = "Welcome Guest!";
            Username = "";
            Password = "";
            UriHelper.NavigateTo("/");

        }
        else
        {
            Color = "red";
            text = "User Password Wrong!";
            Username = "";
            Password = "";

        }
    }

    private void Navigate()
    {
        UriHelper.NavigateTo("/signup");
    }

}
